<div class="container-fluid">
    <div id="wrapper">
        <%= render partial: "partials/jobs_sidebar" %>
        <div id="page-content-wrapper">
            <% if notice %>
            <div class="alert alert-success" role="alert"><%= notice %></div>
            <% end %>
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h1>New Customer</h1>
                    </div>
                    <%= link_to "Same As Caller", job_customer_same_as_caller_path(@job), class: "btn btn-primary", method: :post %>
                    <%= render 'form' %>
                </div>
            </div>
        </div>
    </div>
</div>
