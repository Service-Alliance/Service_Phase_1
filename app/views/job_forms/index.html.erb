<div class="container-fluid">
    <% if notice %>
    <div class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>
    <%= render partial: "partials/jobs_sidebar" %>

    <div class="col-xs-8">
      <h1 class="text-center">Forms:</h1>
        <div class="row">
            <div class="col-xs-6 col-md-3">
                <div class="panel status panel-<%= @job_authorization ? 'success' : 'danger' %>">
                    <div class="panel-heading">
                        <h1 class="panel-title text-center">
                            Authorization Form
                            <br/>
                            <%= @job_authorization ? "Sent" : "Not Sent" %>
                        </h1>
                    </div>
                    <div class="panel-body text-center">
                    <%= if @job_authorization
                    link_to "View form", job_job_form_path(@job, @job_authorization)
                  else
                    link_to "Send forn", job_create_form_path(@job, 1)
                  end
                  %>
                    </div>
                </div>
            </div>
        </div>
        <%= render partial: "partials/jobs_bottom_bar" %>
    </div>
    <%= render partial: "partials/jobs_right_sidebar" %>
</div>
