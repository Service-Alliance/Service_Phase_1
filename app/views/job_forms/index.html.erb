<div class="container-fluid">
    <div id="wrapper">
        <%= render partial: "partials/jobs_sidebar" %>
        <div id="page-content-wrapper">
    <% if notice %>
    <div class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>
    <div class="col-xs-12">
      <h1 class="text-center">Forms:</h1>
        <div class="row">
            <div class="col-xs-6 col-md-3">
                <div class="panel status panel-<%= @job_authorization ? 'success' : 'danger' %>">
                    <div class="panel-heading">
                        <h1 class="panel-title text-center">
                            Authorization Form
                            <br/>
                            <%= @job_authorization ? "Sent" : "Not Sent" %>
                        </h1>
                    </div>
                    <div class="panel-body text-center">
                    <%= if @job_authorization
                    link_to "View form", job_job_form_path(@job, @job_authorization)
                  else
                    if @job.customer
                      link_to "Send forn", job_create_form_path(@job, 1)
                    else
                      "Please create a customer before attempting to send form"
                    end
                  end
                  %>
                    </div>
                </div>
            </div>
        </div>
        <span>Please note: This will send a form to the Customer on file. A customer must be created in order to send this form.</span>
    </div>
</div>
</div>
</div>
