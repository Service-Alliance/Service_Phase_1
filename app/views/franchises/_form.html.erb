<div class="col-xs-12">
    <div class="row content-box">
        <%= simple_form_for(@franchise) do |f| %>
        <% if @franchise.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@franchise.errors.count, "error") %>
                prohibited this franchise from being saved:</h2>

            <ul>
                <% @franchise.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <%= f.input :name, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :franchise_number, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :legal_name, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :phone, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :fax, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :website, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :general_license, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :commercial_license, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :mold_remediation_license, as: :string, wrapper_html: {class: 'col-sm-6'} %>
        <%= f.input :adwords_client_id, label: 'Adwords Client Id', as: :string, wrapper_html: {class: 'col-sm-6'} %>

        <div class="clearfix"></div>
        <hr />

        <%= render 'address_form', f: f %>

        <div class="clearfix"></div>
        <hr />

        <%= f.input :scheduling_manager_ids, collection: User.order([:first_name, :last_name]), label_method: :full_name, input_html: {multiple: true, class: 'select-control form-control', style: 'width: 100%'}, wrapper_html: {class: 'col-sm-12'}, label: 'Scheduling Managers' %>
        <%= f.input :work_order_distribution_ids, collection: User.order([:first_name, :last_name]), label_method: :full_name, input_html: {multiple: true, class: 'select-control form-control', style: 'width: 100%'}, wrapper_html: {class: 'col-sm-12'}, label: 'Work Order Distribution' %>

        <div class="col-xs-12 text-center">
            <div class="actions">
                <%= f.submit class: "btn btn-primary" %>
            </div>
        </div>

        <% end %>
    </div>
</div>
