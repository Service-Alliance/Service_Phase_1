<div class="container-fluid">
    <div id="wrapper">
        <%= render partial: "partials/jobs_sidebar" %>
        <div id="page-content-wrapper">
            <% if notice %>
            <div class="alert alert-success" role="alert"><%= notice %></div>
            <% end %>
            <div class="col-xs-12">
                <h1 class="text-center">Job Referral Assignments</h1>
                <%= link_to "Add Contact", new_job_contact_assignment_path(@job), class:"btn btn-primary new-manager-button"%>
                <% @job.contact_assignments.each do |contact_assignment| %>
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table">
                                    <tbody>
                                      <tr>
                                          <td>Link:</td>
                                          <td><%= link_to contact_assignment.contact.company,  contact_path(contact_assignment.contact.id) %></td>
                                      </tr>
                                        <tr>
                                            <td>First Name:</td>
                                            <td><%= contact_assignment.contact.first_name %></td>
                                        </tr>
                                        <tr>
                                            <td>Last Name:</td>
                                            <td><%= contact_assignment.contact.last_name %></td>
                                        </tr>
                                        <tr>
                                            <td>Owner:</td>
                                            <td><%= contact_assignment.contact.try(:user).try(:full_name) %></td>
                                        </tr>
                                        <tr>
                                            <td>Note:</td>
                                            <td><%= contact_assignment.note %></td>
                                        </tr>

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <%= link_to edit_job_contact_assignment_path(@job, contact_assignment), class: "btn btn-sm btn-warning", type: "button" do %>
                        <i class="glyphicon glyphicon-edit"></i>
                        <% end %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
