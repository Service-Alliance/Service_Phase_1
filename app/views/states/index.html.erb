<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">States
          <% if current_user.admin? %>
            <%= link_to 'New State', new_state_path, class: "btn btn-primary pull-right" %>
          <% end %>
        </div>
        <div class="panel-body">
          <table class="table table-striped">
            <tr>
              <th>State</th>
              <th>Tax Rate</th>
              <th></th>
            </tr>
            <% @states.each do |state| %>
              <tr>
                <th><%= state.name %></th>
                <th><%= state.tax_rate %>%</th>
                <th>
                  <%= link_to "Edit", edit_state_path(state), class: 'btn btn-xs btn-primary' %>
                  <%= link_to "Delete", state, method: :delete, class: 'btn btn-xs btn-danger' %>
                </th>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
