<div class="col-xs-12">
  <div class="row content-box">
    <%= simple_form_for [@job, @loss] do |f| %>
      <% if @loss.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@loss.errors.count, "error") %> prohibited this loss from being saved:</h2>
          <ul>
            <% @loss.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
