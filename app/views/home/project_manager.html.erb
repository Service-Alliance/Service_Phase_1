<div class="container-fluid">


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Jobs Assignments</div>
      <div class="panel-body">
        <table
          class="responsive"
          data-toggle="table"
          data-url="job-assignments/list"
          data-show-refresh="true"
          data-show-toggle="true"
          data-show-columns="true"
          data-search="true"
          data-flat="true"
          data-select-item-name="toolbar1"
          data-pagination="true"
          data-sort-name="id"
          data-sort-order="desc">
          <thead>
            <tr>
              <th data-field="id" data-sort-order='desc' data-sortable="true" data-formatter="LinkFormatter">Job ID</th>
              <th data-field="schedule_datetime" data-sort-order='desc' data-sortable="true" data-formatter="LinkFormatter">Scheduled</th>
              <th data-field="job_id" data-sort-order='desc' data-sortable="true" data-formatter="LinkFormatter">Job ID</th>
              <th data-field="manager_confirmation" data-sort-order='desc' data-sortable="true" data-formatter="LinkFormatter">Confirmed?</th>

            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
