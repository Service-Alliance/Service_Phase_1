<div class="col-xs-12">
    <div class="row content-box">
        <%= form_for [@job, @caller] do |f| %>
        <% if @caller.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@caller.errors.count, "error") %>
                prohibited this caller from being saved:</h2>

            <ul>
                <% @caller.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <div class="col-xs-6">
            <div class="form-group">
                <%= f.label :first_name %><br>
                <%= f.text_field :first_name, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <%= f.label :last_name %><br>
                <%= f.text_field :last_name, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <%= f.label :email %><br>
                <%= f.text_field :email, class:"form-control" %>
            </div>
        </div>

        <%= render 'address_form', f: f %>

        <%= render 'partials/phone_form', f: f %>

        <div class="col-xs-12 text-center">
            <div class="actions">
                <%= f.submit class:"btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>
