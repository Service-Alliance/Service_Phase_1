                    <% end %>
                </li>

                <li>
                    <%= link_to new_or_view_job_detail_path(@job, @job.job_detail)  do %>
                    <i class="<%= @job.job_detail ? 'glyph-done' : 'glyph-incomplete'  %> glyphicon glyphicon-ok"></i>
