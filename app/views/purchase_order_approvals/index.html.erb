<p id="notice"><%= notice %></p>

<h1>Listing Purchase Order Approvals</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Job name</th>
      <th>Vendor</th>
      <th>Purchase item</th>
      <th>Amount</th>
      <th>Last four card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_order_approvals.each do |purchase_order_approval| %>
      <tr>
        <td><%= purchase_order_approval.date %></td>
        <td><%= purchase_order_approval.job_name %></td>
        <td><%= purchase_order_approval.vendor %></td>
        <td><%= purchase_order_approval.purchase_item %></td>
        <td><%= purchase_order_approval.amount %></td>
        <td><%= purchase_order_approval.last_four_card %></td>
        <td><%= link_to 'Show', purchase_order_approval %></td>
        <td><%= link_to 'Edit', edit_purchase_order_approval_path(purchase_order_approval) %></td>
        <td><%= link_to 'Destroy', purchase_order_approval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

