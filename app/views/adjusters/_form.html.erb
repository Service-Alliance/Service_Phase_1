<div class="col-xs-12">
    <div class="row content-box">
        <%= form_for @adjuster do |f| %>
        <% if @adjuster.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@adjuster.errors.count, "error") %>
                prohibited this adjuster from being saved:</h2>

            <ul>
                <% @adjuster.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <div class="col-xs-12">
            <div class="form-group">
                <%= f.label :select_adjuster %><br>
                <%= select_tag :adjuster_select, options_from_collection_for_select(Adjuster.all, :id, :full_name), prompt: "Select an Adjuster", class: "form-control" %>
            </div>
        </div>
        <div class="hidden col-xs-12" id="existing-adjuster">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a href="#collapseAgent">Agent Information:</a>

                        <% unless @adjuster %>
                        <%= link_to new_job_adjuster_path(job_id: @job.id), class: "pull-right" do %>
                        <i class="glyphicon glyphicon-plus"></i>
                        <% end %>

                        <%= link_to job_adjusters_samecaller_path(@job.id), method: :post, class: "pull-right margin-right-25px" do %>
                        Same As Caller
                        <% end %>

                        <% end %>
                    </h3>
                </div>
                <div id="collapseAgent">

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>First Name:</td>
                                            <td id="first_name"></td>
                                        </tr>
                                        <tr>
                                            <td>Last Name:</td>
                                            <td id="last_name"></td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td id="email"></td>
                                        </tr>
                                        <tr>
                                            <td>Address 1:</td>
                                            <td id="address_1"></td>
                                        </tr>
                                        <tr>
                                            <td>Address 2</td>
                                            <td id="address_2"></td>
                                        </tr>
                                        <tr>
                                            <td>City</td>
                                            <td id="city"></td>
                                        </tr>
                                        <tr>
                                            <td>Zip</td>
                                            <td id="zip"></td>
                                        </tr>
                                        <tr>
                                            <td>State</td>
                                            <td id="state"></td>
                                        </tr>
                                        <tr>
                                            <td>County</td>
                                            <td id="county"></td>
                                        </tr>
                                        <tr>
                                            <td>Phone(s)</td>
                                            <td id="phone"></td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>
                    <div class="panel-footer">

                        <span class="pull-right"></span>
                    </div>

                </div>
            </div>

        </div>
        <div id="new-adjuster">
            <div class="col-xs-12">
                <div class="form-group">
                    <%= f.label :insurance_company_id %><br>
                    <%= f.collection_select :insurance_company_id, InsuranceCompany.all, :id, :name, {prompt: true},  { class: 'form-control'} %>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <%= f.label :first_name %><br>
                    <%= f.text_field :first_name, class:"form-control" %>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <%= f.label :last_name %><br>
                    <%= f.text_field :last_name, class:"form-control" %>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <%= f.label :email %><br>
                    <%= f.text_field :email, class:"form-control" %>
                </div>
            </div>

            <%= render 'address_form', f: f %>
            <%= render 'partials/phone_form', f: f %>
        </div>

        <%= hidden_field_tag "same_adjuster[adjuster_id]" %>
        <%= hidden_field_tag "job[job_id]", params[:job_id] %>
        <div class="col-xs-12 text-center">
            <div class="actions">
                <%= f.submit class:"btn btn-primary" %>
            </div>
        </div>

        <% end %>
    </div>
</div>
<%= render partial: "partials/jobs_bottom_bar" %>
