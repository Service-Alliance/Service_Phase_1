<div class="col-xs-12">
    <div class="row content-box">
        <%= form_for(@contact) do |f| %>
        <% if @contact.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@contact.errors.count, "error") %>
                prohibited this contact from being saved:</h2>

            <ul>
                <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <% if @job %>
        <%= hidden_field_tag "job[job_id]", @job.id %>
        <% end %>
        <div class="col-xs-12">
          <div class="form-group">
              <%= f.label :owner_id %><br>
              <%= f.collection_select :owner_id, User.all, :id, :full_name, {prompt: true},  { class: 'form-control'} %>
          </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <%= f.label :company %><br>
                <%= f.text_field :company, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <%= f.label :first_name %><br>
                <%= f.text_field :first_name, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <%= f.label :last_name %><br>
                <%= f.text_field :last_name, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <%= f.label :email %><br>
                <%= f.text_field :email, class:"form-control" %>
            </div>
        </div>

        <%= render 'address_form', f: f %>
        <%= render 'partials/phone_form', f: f %>

        <div class="col-xs-12 text-center">
            <div class="actions">
                <%= f.submit class:"btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>
