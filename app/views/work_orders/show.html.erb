<div class="container-fluid">
  <div id="wrapper">
    <%= render partial: "partials/jobs_sidebar" %>
    <div id="page-content-wrapper">
      <% if notice %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>
      <div class="col-xs-12">
        <div class="col-xs-12">
          <h2 class=text-center> SERVPRO of <%= @job.try(:franchise).try(:name).upcase %> W/O # <%= @work_order.id %>  </h2>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h2 class="panel-title clearfix">
              Work Starts: <%= @work_order.job_start.try(:strftime, "%A, %B %d, %Y %l:%M %p") %>
              <button type="button" data-toggle="modal" data-target="#work_order_tsheets_modal" class="hidden pull-right btn btn-success">Send to TSheets</button>
            </h2>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-12">
                <hr/>
                <div class="clearfix">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <span class="bold">To:</span><br>
                      <%= @work_order.to.join('<br />').html_safe %>
                    </div>
                    <div class="form-group">
                      <span class="bold">Crew Chief(s):</span><br>
                      <%= @work_order.crew_chief_names.join('<br />').html_safe %>
                    </div>
                    <div class="form-group">
                      <span class="bold">Technician(s):</span><br>
                      <%= @work_order.technician_names.join('<br />').html_safe %>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <span class="bold">Name:</span><br>
                      <%= @work_order.name %>
                    </div>
                    <div class="form-group">
                      <span class="bold">Typed By:</span><br>
                      <%= @work_order.typed_by %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <span class="bold">Email Log</span><br>
                      <table class="table table-condensed">
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Subject</th>
                          <th>Sent</th>
                        </tr>
                        <% @work_order.mail_logs.each do |log| %>
                          <tr>
                            <td><%= log.name %></td>
                            <td><%= log.email %></td>
                            <td><%= log.subject %></td>
                            <td><%= log.created_at %></td>
                          </tr>
                        <% end %>
                      </table>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12">
                  <hr/>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <h3>Work Order Details</h3><br>
                        <span class="bold">Job Name:</span><br>
                        <%= @work_order.job_name %>
                      </div>
                    </div>
                      <div class="col-sm-12">
                        <div class="form-group">
                          <span class="bold">Job Start:</span><br>
                          <%= @work_order.job_start.try(:strftime, "%A, %B %d, %Y %l:%M %p") %>
                        </div>
                      </div>

                      <div class="col-sm-12">
                        <div class="form-group">
                          <span class="bold">Job Location:</span><br>
                          <%= @work_order.customer_address_without_county %>
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group">
                          <span class="bold">Contact:</span><br>
                          <%= @work_order.contact %>
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group">
                          <span class="bold">Telephone:</span><br>
                          <%= @work_order.telephone %>
                        </div>
                      </div>
                  </div>
                  <div class="col-sm-6">
                    <%= render partial: 'partials/google_map', locals: {map_id: 'map', address: @work_order.customer_full_address} %>
                  </div>
                </div>
                <hr />
                <div class="col-sm-12">
                  <div class="form-group">
                    <span class="bold">Scope of Work:</span><br>
                    <%= @work_order.scope_of_work %>
                  </div>
                </div>
              <div class="col-sm-12">
                <div class="form-group">
                  <span class="bold">Required:</span><br>
                  <%= @work_order.required %>
                </div>
              </div>
            </div>
              <div class="clearfix">
                <hr />
                <div class="col-sm-6">
                  <div class="form-group">
                    <span class="bold">Crew Size:</span><br>
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <span class="bold">Estimated hours</span><br>
                    <%= @work_order.estimated_hours %>
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <span class="bold">Hours on Job:</span><br>
                    <%= @work_order.hours_on_job %>
                  </div>
                </div>
              </div>
                <div class="clearfix"></div>
                <hr />
                <div class="col-sm-12">
                <div class="col-sm-3">
                  <div class="form-group">
                    <span class="bold">Referral:</span><br>
                    <%= @work_order.referral %>
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <span class="bold">Insurance:</span><br>
                    <%= @work_order.insurance %>
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <span class="bold">Claim Number:</span><br>
                    <%= @work_order.claim_number %>
                  </div>
                </div>
                </div>
                <div class="col-sm-12">
                  <div class="form-group">
                    <span class="bold">Job Manager Contact:</span><br>
                    <%= render partial: 'job_managers', locals: {job_managers: @work_order.job_managers} %>
                  </div>
                </div>
                <div class="col-sm-12">
                  <div class="form-group">
                    <span class="bold">Adjuster:</span><br>
                    <%= @work_order.adjuster %>
                  </div>
                </div>
              </div>
            </div>
          <div class="panel-footer">
            <%= link_to edit_job_work_order_path(@job, @work_order), class: "btn btn-sm btn-warning", type: "button" do %>
              <i class="glyphicon glyphicon-edit"></i> Edit
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'tsheets_modal', locals: {work_order: @work_order} %>
