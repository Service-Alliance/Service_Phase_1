<div class="container-fluid">
  <div id="wrapper">
    <%= render partial: "partials/jobs_sidebar" %>
    <div id="page-content-wrapper">
      <% if notice %>
          <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>
      <div class="col-xs-12">
        <h1 class="text-center">Uploads/Files:</h1>
        <h2><%= link_to "New Upload", new_job_upload_path(@job) %></h2>
        <div class="panel panel-default">
          <div class="panel-heading">Uploads/Files</div>
          <div class="panel-body">
            <table
            data-toggle="table"
            data-url="uploads"
            data-show-refresh="true"
            data-show-toggle="true"
            data-show-columns="true"
            data-search="true"
            data-flat="true"
            data-select-item-name="toolbar1"
            data-pagination="true"
            data-sort-name="created_at"
            data-sort-order="desc">
              <thead>
              <tr>
                <th data-field="category" data-formatter="UploadCategoryFormatter" data-sortable="true">Upload Cateogry</th>
                <th data-field="uploads" data-formatter="UploadsFormatter" data-sortable="true">Files</th>
                <th data-field="created_at" data-sortable="true">Uploaded At</th>
                <!--
                <th data-field="direct_link" data-formatter="UploadLinkFormatter" data-sortable="true">Link</th>
                <th data-field="id" data-formatter="DeleteUpload" data-sortable="true">Delete</th>
                -->
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
