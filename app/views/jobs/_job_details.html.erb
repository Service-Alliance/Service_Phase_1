<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">
          <a data-toggle="collapse" href="#collapseClient">Client Information:</a>

          <% unless @job_detail %>
            <%= link_to new_job_job_detail_path(job_id: @job.id), class: "pull-right" do %>
              <i class="glyphicon glyphicon-plus"></i>
            <% end %>
          <% end %>
        </h3>
    </div>
    <div id="collapseClient" class="panel-collapse collapse">
      <% if @job_detail %>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-12">
                <table class="table">
                    <tbody>
                      <tr>
                          <td>Insurance Company:</td>
                          <td><%= @job_detail.try(:insurance_company).try(:name) %></td>
                      </tr>
                      <tr>
                          <td>Claim Number:</td>
                          <td><%= @job_detail.try(:claim_number) %></td>
                      </tr>
                        <tr>
                            <td>Policy Number:</td>
                            <td><%= @job_detail.try(:policy_number) %></td>
                        </tr>
                        <tr>
                            <td>Coverage Type:</td>
                            <td><%= @job_detail.try(:coverage_type).try(:name) %></td>
                        </tr>
                        <tr>
                            <td>Deductible Amount</td>
                            <td><%= @job_detail.try(:deductible_amount) %></td>
                        </tr>
                        <tr>
                            <td>Self Pay?</td>
                            <td><%= @job_detail.try(:self_pay).try(:name) %></td>
                        </tr>
                        <tr>
                            <td>Is there a deductible?</td>
                            <td><%= @job_detail.try(:deductible).try(:name) %></td>
                        </tr>
                        <tr>
                            <td>Is there an ESL/NSTE Amount?</td>
                            <td><%= @job_detail.try(:esl_nst_amount).try(:name) %></td>
                        </tr>
                        <tr>
                            <td>Emergency Services Amount?</td>
                            <td><%= @job_detail.try(:emergency_service_amount) %></td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="panel-footer">
        <a href="mailto:<%= @caller.email %>" type="button" class="btn btn-sm btn-primary">
            <i class="glyphicon glyphicon-envelope"></i>
        </a>
        <span class="pull-right">
            <%= link_to edit_job_job_detail_path(@job, @job_detail), class: "btn btn-sm btn-warning", type: "button" do %>
            <i class="glyphicon glyphicon-edit"></i>
            <% end %>
        </span>
    </div>
    <% end %>
  </div>
</div>
