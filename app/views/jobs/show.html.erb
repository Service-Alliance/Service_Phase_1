<div class="container-fluid">
<div id="wrapper">
  <%= render partial: "partials/jobs_sidebar" %>
    <div id="page-content-wrapper">

            <% if notice %>
            <div class="alert alert-success" role="alert"><%= notice %></div>
            <% end %>

            <div class="col-xs-12">
                <h1 class="text-center">Job Information</h1>
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Status:
                            <%= @job.try(:job_status).try(:name) %>
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Entered By:</td>
                                            <td><%= @job.try(:user).try(:email) %></td>
                                        </tr>
                                        <tr>
                                            <td>Franchise</td>
                                            <td><%= @job.try(:franchise).try(:name) %></td>
                                        </tr>
                                        <tr>
                                            <td>Details</td>
                                            <td><%= @job.details %></td>
                                        </tr>
                                        <tr>
                                            <td>Notes</td>
                                            <td><%= @job.job_note %></td>
                                        </tr>

                                        <tr>
                                            <td>Referral Type</td>
                                            <td><%= @job.try(:referral_type).try(:name) %></td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <a href="mailto:<%= @caller.try(:email) %>" type="button" class="btn btn-sm btn-primary">
                            <i class="glyphicon glyphicon-envelope"></i>
                        </a>
                        <span class="pull-right">

                            <%= link_to  edit_job_path(@job), class: "btn btn-sm btn-warning", type: "button" do %>
                            <i class="glyphicon glyphicon-edit"></i>
                            <% end %>
                        </span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
