<div class="container-fluid">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h1>New Loss Form</h1>
        </div>
        <div class="col-xs-12 margin-botton-3">
          <h3>On call assignments</h3>
          <%= Date.today %>: <br / >
          <% Oncall.where(scheduled_on: Date.today).each do |oncall| %>

          <% user = User.find_by(id: oncall.user_id) %>
          <% if user && user.full_name %>
          Name: <%= link_to user.full_name, user_path(user.id) %><br / />
          Number(s): <% user.phones.each do |phone| %>
          <%= phone.number %> <br />
          <% end %>
          <% end %>
          <% end %><br /><br />

          <%= Date.tomorrow %>: <br / />
          <% Oncall.where(scheduled_on: Date.tomorrow).each do |oncall| %>
          <% user = User.find_by(id: oncall.user_id) %>
          <% if user && user.full_name %>
          Name: <%= link_to user.full_name, user_path(user.id) %><br / />
          Number(s): <% user.phones.each do |phone| %>
          <%= phone.number %><br  />
          <% end %>
          <% end %>
          <% end %>
        </div>

        <%= render 'form' %>

      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function () {
    $('input[type=radio]').change(function () {
      if (this.value == '3') {
        $('#billingForm').find('input').val('');
        $("#billingForm").removeClass('hidden')
      } else if (this.value == '1' || this.value == '2') {
        $("#billingForm").addClass('hidden')
        $('#billingForm').find('input').val('');
      }
    });
  });
</script>

