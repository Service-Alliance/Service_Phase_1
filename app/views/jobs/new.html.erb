  $("a.tooltipLink").tooltip();

  flatpickr(".datePicker", {
    enableTime: true,
    defaultDate: new Date(),
        // create an extra input solely for display purposes
        altInput: true,
        altFormat: "F j, Y h:i K"
      });

  $("#submit-loss").on('click', function (e) {
    e.preventDefault();

    e.ajax({url: ""})
  })

  $('input[type="submit"]').click(function() {
    $('.modal').modal('hide');
  });
</script>
