<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Status</th>
      <th>Entered by</th>
      <th>Franchise</th>
      <th>Details</th>
      <th>Notes</th>
      <th>Customer</th>
      <th>Referral type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.type_id %></td>
        <td><%= job.status_id %></td>
        <td><%= job.entered_by_id %></td>
        <td><%= job.franchise_id %></td>
        <td><%= job.details %></td>
        <td><%= job.notes %></td>
        <td><%= job.customer_id %></td>
        <td><%= job.referral_type_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

