<p id="notice"><%= notice %></p>

<h1>Listing Customer Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_companies.each do |customer_company| %>
      <tr>
        <td><%= customer_company.company_id %></td>
        <td><%= customer_company.customer_id %></td>
        <td><%= link_to 'Show', customer_company %></td>
        <td><%= link_to 'Edit', edit_customer_company_path(customer_company) %></td>
        <td><%= link_to 'Destroy', customer_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

