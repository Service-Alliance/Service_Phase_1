<p id="notice"><%= notice %></p>

<h1>Listing Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Notify type</th>
      <th>Actor</th>
      <th>Target</th>
      <th>Event</th>
      <th>Job</th>
      <th>Notify text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.notify_type %></td>
        <td><%= notification.actor_id %></td>
        <td><%= notification.target_id %></td>
        <td><%= notification.event_id %></td>
        <td><%= notification.job_id %></td>
        <td><%= notification.notify_text %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

