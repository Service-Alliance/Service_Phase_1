<p id="notice"><%= notice %></p>

<h1>Listing Schedulers</h1>

<table>
  <thead>
    <tr>
      <th>Event date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Assigned to user</th>
      <th>Job</th>
      <th>Scheduler event type</th>
      <th>Notes</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedulers.each do |scheduler| %>
      <tr>
        <td><%= scheduler.event_date %></td>
        <td><%= scheduler.start_time %></td>
        <td><%= scheduler.end_time %></td>
        <td><%= scheduler.assigned_to_user_id %></td>
        <td><%= scheduler.job_id %></td>
        <td><%= scheduler.scheduler_event_type_id %></td>
        <td><%= scheduler.notes %></td>
        <td><%= scheduler.title %></td>
        <td><%= link_to 'Show', job_scheduler_path(@job, scheduler) %></td>
        <td><%= link_to 'Edit', edit_job_scheduler_path(@job, scheduler) %></td>
        <td><%= link_to 'Destroy', job_scheduler_path(@job, scheduler), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scheduler', new_job_scheduler_path(@job) %>
